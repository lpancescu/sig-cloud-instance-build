{
  "builders" : [{
    "name": "centos-6",
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "hard_drive_interface": "sata",
    "headless": "false",
    "iso_interface": "sata",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"],
      ["modifyvm", "{{.Name}}", "--mouse", "ps2"],
      ["modifyvm", "{{.Name}}", "--keyboard", "ps2"],
      ["modifyvm", "{{.Name}}", "--audio", "none"],
      ["modifyvm", "{{.Name}}", "--usb", "off"],
      ["modifyvm", "{{.Name}}", "--usbehci", "off"],
      ["modifyvm", "{{.Name}}", "--usbxhci", "off"],
      ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
    ],
    "iso_url": "http://ftp-stud.fht-esslingen.de/pub/Mirrors/centos/6/isos/x86_64/CentOS-6.8-x86_64-netinstall.iso",
    "iso_checksum": "56d9cc5757ed1443af7b321967622a108978328f72e58050d31bcf1998dfd162",
    "iso_checksum_type": "sha256",
    "boot_command": [
      "<tab><spacebar>",
      "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos6.ks<return>"
    ],
    "http_directory": ".",
    "ssh_username": "vagrant",
    "ssh_private_key_file": "insecure_private_key",
    "ssh_timeout": "60m",
    "shutdown_command": "sudo poweroff"
  },
  {
    "name": "centos-7",
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "hard_drive_interface": "sata",
    "headless": "false",
    "iso_interface": "sata",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"],
      ["modifyvm", "{{.Name}}", "--mouse", "ps2"],
      ["modifyvm", "{{.Name}}", "--keyboard", "ps2"],
      ["modifyvm", "{{.Name}}", "--audio", "none"],
      ["modifyvm", "{{.Name}}", "--usb", "off"],
      ["modifyvm", "{{.Name}}", "--usbehci", "off"],
      ["modifyvm", "{{.Name}}", "--usbxhci", "off"],
      ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
    ],
    "iso_url": "http://ftp-stud.fht-esslingen.de/pub/Mirrors/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
    "iso_checksum": "9ed9ffb5d89ab8cca834afce354daa70a21dcb410f58287d6316259ff89758f5",
    "iso_checksum_type": "sha256",
    "boot_command": [
      "<up><tab><spacebar>",
      "inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.ks<return>"
    ],
    "http_directory": ".",
    "ssh_username": "vagrant",
    "ssh_private_key_file": "insecure_private_key",
    "ssh_timeout": "60m",
    "shutdown_command": "sudo poweroff"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "set -e -x",
      "sudo mount -o loop -t iso9660 VBoxGuestAdditions.iso /mnt",
      "(cd /mnt && sudo sh ./VBoxLinuxAdditions.run)"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "{{.BuildName}}_{{.Provider}}.box"
  }]
}
